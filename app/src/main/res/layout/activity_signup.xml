<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A7AC77"
    android:textDirection="locale"
    tools:context=".SignupActivity">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="373dp"
        android:layout_height="357dp"
        android:layout_marginTop="56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.421"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="512dp"
        android:backgroundTint="#B1B9BA"
        android:ems="10"
        android:fontFamily="sans-serif-smallcaps"
        android:hint="الاسم الكامل "
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColorHighlight="#673D3D"
        android:textColorHint="#673D3D"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.392"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextTextPersonName3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="460dp"
        android:ems="10"
        android:fontFamily="sans-serif-smallcaps"
        android:hint="البريد الالكتروني"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColorHighlight="#673D3D"
        android:textColorHint="#673D3D"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.392"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextTextPassword3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="620dp"
        android:ems="10"
        android:fontFamily="sans-serif-smallcaps"
        android:hint="تأكيد كلمة السر"
        android:inputType="textPassword"
        android:layoutDirection="ltr"
        android:textAlignment="center"
        android:textColorHighlight="#673D3D"
        android:textColorHint="#673D3D"
        android:textDirection="ltr"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.408"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="560dp"
        android:ems="10"
        android:fontFamily="sans-serif-smallcaps"
        android:hint="كلمة السر "
        android:inputType="textPassword"
        android:layoutDirection="rtl"
        android:textAlignment="center"
        android:textColorHighlight="#673D3D"
        android:textColorHint="#673D3D"
        android:textDirection="rtl"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.592"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button6"
        android:layout_width="240dp"
        android:layout_height="56dp"
        android:layout_marginTop="708dp"
        android:background="#B1B9BA"
        android:text="تسجيل"
        android:textColor="#B1B9BA"
        android:textSize="34sp"
        android:textStyle="bold"
        app:backgroundTint="#673D3D"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.426"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>